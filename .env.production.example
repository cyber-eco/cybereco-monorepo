# Production Environment Variables Example
# Copy this file to .env.production.local and fill in your values

# Hub Firebase Configuration
NEXT_PUBLIC_HUB_API_KEY=your-hub-api-key
NEXT_PUBLIC_HUB_AUTH_DOMAIN=your-hub-project.firebaseapp.com
NEXT_PUBLIC_HUB_PROJECT_ID=your-hub-project
NEXT_PUBLIC_HUB_STORAGE_BUCKET=your-hub-project.appspot.com
NEXT_PUBLIC_HUB_MESSAGING_SENDER_ID=your-hub-sender-id
NEXT_PUBLIC_HUB_APP_ID=your-hub-app-id
NEXT_PUBLIC_HUB_MEASUREMENT_ID=your-hub-measurement-id

# JustSplit Firebase Configuration
NEXT_PUBLIC_JUSTSPLIT_API_KEY=your-justsplit-api-key
NEXT_PUBLIC_JUSTSPLIT_AUTH_DOMAIN=your-justsplit-project.firebaseapp.com
NEXT_PUBLIC_JUSTSPLIT_PROJECT_ID=your-justsplit-project
NEXT_PUBLIC_JUSTSPLIT_STORAGE_BUCKET=your-justsplit-project.appspot.com
NEXT_PUBLIC_JUSTSPLIT_MESSAGING_SENDER_ID=your-justsplit-sender-id
NEXT_PUBLIC_JUSTSPLIT_APP_ID=your-justsplit-app-id
NEXT_PUBLIC_JUSTSPLIT_MEASUREMENT_ID=your-justsplit-measurement-id

# Website Firebase Configuration (if separate)
NEXT_PUBLIC_WEBSITE_API_KEY=your-website-api-key
NEXT_PUBLIC_WEBSITE_AUTH_DOMAIN=your-website-project.firebaseapp.com
NEXT_PUBLIC_WEBSITE_PROJECT_ID=your-website-project
NEXT_PUBLIC_WEBSITE_STORAGE_BUCKET=your-website-project.appspot.com
NEXT_PUBLIC_WEBSITE_MESSAGING_SENDER_ID=your-website-sender-id
NEXT_PUBLIC_WEBSITE_APP_ID=your-website-app-id

# Shared Configuration
NEXT_PUBLIC_AUTH_SECRET=your-production-auth-secret-key-min-32-chars
NEXT_PUBLIC_ENVIRONMENT=production

# JWT Configuration (Required for API routes)
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-min-32-chars
JWT_ISSUER=cybere.co
JWT_AUDIENCE=cybereco-apps

# Session Configuration
SESSION_SECRET=your-session-secret-min-32-chars
SESSION_COOKIE_NAME=cybereco-session
SESSION_COOKIE_DOMAIN=.cybere.co

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
CSP_REPORT_URI=https://hub.cybere.co/api/csp-report

# App URLs (update with your custom domains)
NEXT_PUBLIC_HUB_URL=https://hub.cybere.co
NEXT_PUBLIC_JUSTSPLIT_URL=https://justsplit.cybere.co
NEXT_PUBLIC_WEBSITE_URL=https://cybere.co

# Optional: Monitoring and Analytics
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_GA_TRACKING_ID=your-google-analytics-id

# Optional: Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true