{
  "name": "cybereco-monorepo",
  "version": "0.1.0",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "description": "CyberEco - A human-centered digital ecosystem for conscious, connected, and sustainable living",
  "scripts": {
    "dev": "concurrently --names \"🔥FIREBASE,🌐WEBSITE,🏠HUB,💰JUSTSPLIT\" --prefix-colors \"red,green,blue,yellow\" \"npm run emulators\" \"npm run dev:website\" \"nx serve hub\" \"cd apps/justsplit && npm run dev\"",
    "dev:lan": "concurrently --names \"🔥FIREBASE,🌐WEBSITE,🏠HUB,💰JUSTSPLIT\" --prefix-colors \"red,green,blue,yellow\" \"npm run emulators\" \"npm run dev:website:lan\" \"nx serve hub --hostname 0.0.0.0\" \"cd apps/justsplit && npm run dev -- --hostname 0.0.0.0\"",
    "dev:website:lan": "cd apps/website && npm run dev -- --hostname 0.0.0.0",
    "dev:nosim": "nx run-many --target=dev --projects=justsplit-app,hub,website --parallel",
    "dev:core": "concurrently --names \"🔥FIREBASE,🌐WEBSITE,🏠HUB,💰JUSTSPLIT\" --prefix-colors \"red,green,blue,yellow\" \"npm run emulators:core\" \"npm run dev:website\" \"nx serve hub\" \"cd apps/justsplit && npm run dev\"",
    "dev:clean": "concurrently --names \"🔥FIREBASE,🌐WEBSITE,🏠HUB,💰JUSTSPLIT\" --prefix-colors \"red,green,blue,yellow\" \"npm run emulators:hosting\" \"npm run dev:website\" \"nx serve hub\" \"cd apps/justsplit && npm run dev\"",
    "dev:website": "cd apps/website && npm run dev",
    "build": "nx run-many --target=build --projects=justsplit-app,hub,website",
    "build:website": "cd apps/website && npm run build",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "clean": "nx reset",
    "emulators": "firebase emulators:start --only auth,firestore,ui --import=./emulator-data --export-on-exit=./emulator-data",
    "emulators:core": "firebase emulators:start --only auth,firestore --import=./emulator-data --export-on-exit=./emulator-data",
    "emulators:hosting": "firebase emulators:start --only hosting,auth,firestore,ui",
    "hosting:justsplit": "nx run justsplit-app:hosting:emulator",
    "hosting:hub": "nx run hub:hosting:emulator",
    "hosting:dev:justsplit": "nx run justsplit-app:hosting:dev",
    "hosting:dev:hub": "nx run hub:hosting:dev",
    "hosting:website": "firebase serve --only hosting:website -p 40001",
    "hosting:dev:website": "concurrently \"npm run dev:website\" \"npm run hosting:website\"",
    "dev:hub": "nx serve hub",
    "dev:justsplit": "cd apps/justsplit && npm run dev",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "i18n:validate": "nx build i18n && node libs/i18n/scripts/validate-translations.js"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/ua-parser-js": "^0.7.39",
    "date-fns": "^4.1.0",
    "firebase": "^11.8.1",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "qrcode": "^1.5.4",
    "react-icons": "^5.5.0",
    "recharts": "^2.15.3",
    "speakeasy": "^2.0.0",
    "ua-parser-js": "^2.0.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "19.8.14",
    "@nx/jest": "^19.8.14",
    "@nx/js": "19.8.14",
    "@nx/linter": "19.8.14",
    "@nx/next": "19.8.14",
    "@nx/react": "19.8.14",
    "@nx/workspace": "19.8.14",
    "@swc-node/register": "^1.6.7",
    "@swc/core": ">= 1.4.13",
    "@swc/helpers": ">=0.5.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.2",
    "eslint-config-next": "^15.3.3",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "nx": "19.8.14",
    "playwright": "^1.53.2",
    "ts-jest": "^29.3.4",
    "typescript": "^5.3.3"
  }
}
