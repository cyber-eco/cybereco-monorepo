{
  "name": "cybereco-monorepo",
  "version": "0.1.0",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "description": "CyberEco - A human-centered digital ecosystem for conscious, connected, and sustainable living",
  "scripts": {
    "dev": "concurrently --names \"ðŸ”¥FIREBASE,ðŸŒWEBSITE,ðŸ HUB,ðŸ’°JUSTSPLIT\" --prefix-colors \"red,green,blue,yellow\" \"npm run emulators\" \"npm run dev:website\" \"nx serve hub\" \"cd apps/justsplit && npm run dev\"",
    "dev:nosim": "nx run-many --target=dev --projects=justsplit-app,hub,website --parallel",
    "dev:core": "concurrently --names \"ðŸ”¥FIREBASE,ðŸŒWEBSITE,ðŸ HUB,ðŸ’°JUSTSPLIT\" --prefix-colors \"red,green,blue,yellow\" \"npm run emulators:core\" \"npm run dev:website\" \"nx serve hub\" \"cd apps/justsplit && npm run dev\"",
    "dev:clean": "concurrently --names \"ðŸ”¥FIREBASE,ðŸŒWEBSITE,ðŸ HUB,ðŸ’°JUSTSPLIT\" --prefix-colors \"red,green,blue,yellow\" \"npm run emulators:hosting\" \"npm run dev:website\" \"nx serve hub\" \"cd apps/justsplit && npm run dev\"",
    "dev:website": "cd apps/website && npm run dev",
    "build": "nx run-many --target=build --projects=justsplit-app,hub,website",
    "build:website": "cd apps/website && npm run build",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "clean": "nx reset",
    "emulators": "firebase emulators:start --only auth,firestore,ui --import=./emulator-data --export-on-exit=./emulator-data",
    "emulators:core": "firebase emulators:start --only auth,firestore --import=./emulator-data --export-on-exit=./emulator-data",
    "emulators:hosting": "firebase emulators:start --only hosting,auth,firestore,ui",
    "hosting:justsplit": "nx run justsplit-app:hosting:emulator",
    "hosting:hub": "nx run hub:hosting:emulator",
    "hosting:dev:justsplit": "nx run justsplit-app:hosting:dev",
    "hosting:dev:hub": "nx run hub:hosting:dev",
    "hosting:website": "firebase serve --only hosting:website -p 40001",
    "hosting:dev:website": "concurrently \"npm run dev:website\" \"npm run hosting:website\""
  },
  "dependencies": {
    "firebase": "^11.8.1",
    "jest": "^29.7.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "19.8.14",
    "@nx/jest": "^19.8.14",
    "@nx/js": "19.8.14",
    "@nx/linter": "19.8.14",
    "@nx/next": "19.8.14",
    "@nx/react": "19.8.14",
    "@nx/workspace": "19.8.14",
    "@swc-node/register": "^1.6.7",
    "@swc/core": ">= 1.4.13",
    "@swc/helpers": ">=0.5.17",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.2",
    "eslint-config-next": "^15.3.3",
    "nx": "19.8.14",
    "typescript": "^5"
  }
}
