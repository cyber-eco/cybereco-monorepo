{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": "../..",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "paths": {
      "@cybereco/shared-types": ["libs/shared-types/src/index.ts"],
      "@cybereco/firebase-config": ["libs/firebase-config/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "serverOnly.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts", "src/**/*.spec.tsx", "src/**/*.test.tsx"]
}