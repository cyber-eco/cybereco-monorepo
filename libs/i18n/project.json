{
  "name": "i18n",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/i18n/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/i18n",
        "main": "libs/i18n/src/index.ts",
        "tsConfig": "libs/i18n/tsconfig.lib.json",
        "assets": [
          "libs/i18n/*.md",
          {
            "input": "libs/i18n/src",
            "glob": "**/*.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/i18n/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/i18n/jest.config.js",
        "passWithNoTests": true
      }
    },
    "validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node libs/i18n/scripts/validate-translations.js",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": []
}